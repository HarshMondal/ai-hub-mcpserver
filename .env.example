# AI Assistant Hub Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="AI-Assistant Hub"
LOG_LEVEL=INFO

# Weather Tool Configuration
# Get your API key from: https://openweathermap.org/api
TOOL_WEATHER_ENABLED=true
TOOL_WEATHER_CONFIG__API_KEY=your-openweathermap-api-key
TOOL_WEATHER_CONFIG__BASE_URL=https://api.openweathermap.org/data/2.5

# GitHub Issues Tool Configuration
# Create a personal access token at: https://github.com/settings/tokens
# Note: Token is optional for public repositories but required for private ones
TOOL_GITHUB_ISSUES_ENABLED=true
TOOL_GITHUB_ISSUES_CONFIG__TOKEN=your-github-personal-access-token
TOOL_GITHUB_ISSUES_CONFIG__BASE_URL=https://api.github.com

# Slack Post Message Tool Configuration
# Create a bot token at: https://api.slack.com/apps
TOOL_SLACK_POST_MESSAGE_ENABLED=true
TOOL_SLACK_POST_MESSAGE_CONFIG__TOKEN=xoxb-your-slack-bot-token
TOOL_SLACK_POST_MESSAGE_CONFIG__BASE_URL=https://slack.com/api
